<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/primaryColor"
    android:layout_marginRight="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="10dp" >


    <ImageView
        android:id="@+id/imageView_album_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_image_black_35dp"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_albumTitle_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name playlist"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"/>

        <TextView
            android:id="@+id/textView_recordCompany_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Name owner"
            android:textSize="18sp"
            android:textColor="@color/primaryTextColor"/>

    </LinearLayout>
</LinearLayout>